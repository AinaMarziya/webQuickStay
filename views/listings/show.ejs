<% layout("/layouts/boilerplate") -%>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row">
  <div class="col-8 offset-3 mt-3">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%= listing.image.url %>" alt="listing_image" class="card-img-top show-img">

    <div class="card-body">
      <% if (listing.owner) { %>
        <p>Owned by <%= listing.owner.username %></p>
      <% } else { %>
        <p>Owner information not available</p>
      <% } %>

      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>

      <% if (currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
        <a class="btn btn-warning" href="/listings/<%= listing._id %>/edit">Edit</a>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-danger">Delete</button>
        </form>
      <% } %>
    </div>
  </div>
</div>

<div class="col-8 offset-3 mb-3">
  <% if (currUser) { %>
    <hr/>
    <h4>Leave a Review</h4>

    <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
      <div class="mb-3 mt-3">
        <label class="form-label">Rating</label>
        <fieldset class="starability-basic">
          <input type="radio" name="review[rating]" value="1" checked />
          <input type="radio" name="review[rating]" value="2" />
          <input type="radio" name="review[rating]" value="3" />
          <input type="radio" name="review[rating]" value="4" />
          <input type="radio" name="review[rating]" value="5" />
        </fieldset>
      </div>

      <div class="mb-3">
        <textarea name="review[comment]" class="form-control" required></textarea>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
  <% } %>
</div>

<% if (listing.reviews.length > 0) { %>
  <div class="row col-8 offset-3">
    <h5>All Reviews</h5>

    <% for (let review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h6><%= review.author.username %></h6>
          <p><%= review.comment %></p>
        </div>
      </div>
    <% } %>
  </div>
<% } %>

<div class="col-8 offset-3 mt-3">
  <h3>Where you will be</h3>
  <div id="map"></div>
</div>

<script src="/js/map.js"></script>




